<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:id="@+id/layoutpadre"
    android:background="@drawable/gradient"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:background="@color/primary_light"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:contentPadding="4dp"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/primary_text"
                android:text="¿A donde vas?"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnCasaDestino"
                    android:layout_margin="5dp"
                    android:textColor="@color/Clouds"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_red"
                    android:layout_weight="1"
                    android:text="Casa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnUniversidadDestino"
                    android:layout_margin="5dp"
                    android:textColor="@color/Clouds"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_blue"
                    android:layout_weight="1"
                    android:text="Universidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--fin primer a donde vas-->

    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:contentPadding="4dp"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/primary_text"
                android:id="@+id/txtHora"
                android:text="¿Cuando sales?"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnfecha"
                    android:layout_margin="5dp"
                    android:textColor="@color/Clouds"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_red"
                    android:layout_weight="1"
                    android:text="Fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnhora"
                    android:layout_margin="5dp"
                    android:textColor="@color/Clouds"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_blue"
                    android:layout_weight="1"
                    android:text="Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--fin primer a donde vas-->

    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:background="@color/primary_light"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:contentPadding="4dp"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/primary_text"
                android:text="Publicar como"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnConductor"
                    android:layout_margin="5dp"
                    android:textColor="@color/Clouds"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_red"
                    android:layout_weight="1"
                    android:text="Conductor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnPasajero"
                    android:layout_margin="5dp"
                    android:textColor="@color/Clouds"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_blue"
                    android:layout_weight="1"
                    android:text="Pasajero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <!--fin primer a donde vas-->

</LinearLayout>