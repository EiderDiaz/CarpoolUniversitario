<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RegistroActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/Carpool_white_logo" />

    <TextView
        android:drawableEnd="@drawable/ic_help"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:text="Origen Y Destino  " />



    <EditText
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:id="@+id/txtorigen"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201dp"
        android:ems="10"
        android:hint=" Casa"
        android:background="#110000000"
         />

    <EditText
        android:id="@+id/txtdestino"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:background="#110000000"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:ems="10"
        android:hint=" Universidad" />


    <TextView
        android:drawableEnd="@drawable/ic_help"
        android:textSize="20dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Matriculado  " />

    <EditText
        android:id="@+id/txtmatricula"
        android:hint="Matricula"
        android:background="#110000000"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="239dp"
       />

    <EditText
        android:id="@+id/txtsemestre"
        android:hint="Semestre"
        android:background="#110000000"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="204dp"
        />

    <EditText
        android:id="@+id/txtcarrera"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="168dp"
        android:background="#110000000"
        android:hint="carrera" />



    <Button
        android:id="@+id/button"
        android:textColor="@color/Clouds"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="103dp"
        android:text="Registrate" />




</RelativeLayout>